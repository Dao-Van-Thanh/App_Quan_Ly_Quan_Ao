<!-- click_animation.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <objectAnimator
            android:propertyName="alpha"
            android:valueTo="0.5"
            android:valueType="floatType"
            android:duration="1000" />
    </item>
    <item>
        <objectAnimator
            android:propertyName="alpha"
            android:valueTo="1.0"
            android:valueType="floatType"
            android:duration="1000" />
    </item>
</selector>