<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Card shadow -->
    <item >
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Shadow color: Light gray -->
            <corners android:radius="10dp" /> <!-- Corner radius: 10dp -->
        </shape>
    </item>

    <!-- Card background shape -->
    <item android:bottom="3dp" android:left="0dp" android:right="3dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color: White -->
            <corners android:radius="10dp" /> <!-- Corner radius: 10dp -->
        </shape>
    </item>

</layer-list>
